{
  "manifest_version": 3,
  "name": "Claude Blocker",
  "version": "1.0.0",
  "description": "Block distracting websites unless Claude Code is actively running inference",
  "minimum_chrome_version": "116",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.global.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.global.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Blocker"
  }
}
